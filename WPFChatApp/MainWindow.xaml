<Window x:Class="WPFChatApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Application" Height="350" Width="500">
    <Grid>
        <ListBox Name="chatListBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,10,10,50" />
        <TextBox Name="messageTextBox" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="10,0,10,10" />
        <Button Content="Send" Click="SendMessage_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Width="75" />
    </Grid>
</Window>
